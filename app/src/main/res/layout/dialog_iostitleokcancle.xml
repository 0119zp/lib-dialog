<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/transparent"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/dialog_iostitleokcanccle_top_lin"
        android:background="@drawable/dialog_iosokcancle_top"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/dialog_iostitleokcancle_two_lin"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_iosokcancle_titile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/common_30"
                android:textSize="@dimen/common_32"
                android:text="标题"
                android:textColor="#222222"
                android:orientation="vertical" >
            </TextView>

            <TextView
                android:id="@+id/dialog_iosokcancle_content_neirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_30"
                android:paddingRight="@dimen/common_30"
                android:gravity="center"
                android:layout_marginBottom="@dimen/common_40"
                android:minLines="3"
                android:lineSpacingMultiplier="1.3"
                android:textSize="@dimen/common_32"
                android:text="内容"
                android:textColor="#222222"
                android:orientation="vertical" >
            </TextView>
        </LinearLayout>


        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button 
                android:id="@+id/dialog_iosokcancle_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="左边"
                android:textColor="#999999"
                android:textSize="16dp"
                android:background="@drawable/dialog_iosokcancle_btn_right"/>
            <View 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#cccccc"/>
            <Button 
                android:id="@+id/dialog_iosokcancle_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="右边"
                android:textColor="#2072cf"
                android:textSize="16dp"
                android:background="@drawable/dialog_iosokcancle_btn_left"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
